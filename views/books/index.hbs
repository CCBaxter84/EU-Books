<main>
  <h2>Search Books</h2>
  <form action="/books" method="GET">
    <section class="label-n-input">
      <label>Title</label>
      <input autofocus type="text" class="text-box" name="title" value={{ searchOptions.title }}>
    </section>
    <section class="split-inputs">
      <section class="label-n-input">
        <label>Published After</label>
        <input type="date" class="text-box" name="publishedAfter" {{ searchOptions.publishedAfter }}>
      </section>
      <section class="label-n-input">
        <label>Published Before</label>
        <input type="date" class="text-box" name="publishedBefore" {{ searchOptions.publishedBefore }}>
      </section>
    </section>
    {{> submitSearch }}
  </form>
  <br>
  {{> bookGrid books=books }}
</main>